<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ap_img"
        android:layout_width="360dp"
        android:layout_height="279dp"
        app:srcCompat="@drawable/ap_img"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="234dp"
        app:layout_constraintTop_toTopOf="@+id/ap_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_ckh"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="TextView"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#282f39"
            android:background="@drawable/shape_corner_normal4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/et_pddh"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text=""
            android:hint="@string/pd_et_hint"
            android:textSize="24sp"
            android:textColor="#282f39"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/shape_corner_normal4"
            app:layout_constraintTop_toBottomOf="@+id/et_ckh"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textSize="24sp"
            android:textColor="#282f39"
            android:background="@drawable/shape_corner_normal1"
            android:text="@string/pd_bt_confirm"
            app:layout_constraintTop_toBottomOf="@+id/et_pddh"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>