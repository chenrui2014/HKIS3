<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/user_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/user_head"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_pwd"
        android:drawableTop="@mipmap/user_update_pwd"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:textColor="#3ea5f8"
        android:textSize="12sp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/sp2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/user_about"/>

    <TextView
        android:id="@+id/sp1"
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:text=""
        android:background="#e5ecf0"
        app:layout_constraintBottom_toTopOf="@+id/sp2"
        app:layout_constraintLeft_toLeftOf="@+id/sp3"
        app:layout_constraintRight_toRightOf="@+id/sp3"/>

    <TextView
        android:id="@+id/user_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_about"
        android:drawableTop="@mipmap/user_about"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:textColor="#3ea5f8"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_pwd"
        app:layout_constraintLeft_toRightOf="@+id/user_pwd"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/sp2"
        android:layout_width="344dp"
        android:layout_height="1dp"
        android:background="#e5ecf0"
        android:text=""
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/sp3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/user_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_update"
        android:drawableTop="@mipmap/user_exit"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:textColor="#3ea5f8"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/user_exit"/>

    <TextView
        android:id="@+id/sp3"
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:text=""
        android:background="#e5ecf0"
        android:layout_marginBottom="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/user_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_exit"
        android:drawableTop="@mipmap/user_exit"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:textColor="#3ea5f8"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/user_update"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_update"/>
</android.support.constraint.ConstraintLayout>