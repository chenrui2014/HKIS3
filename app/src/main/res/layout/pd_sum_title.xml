<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bg"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/back"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pd_sum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_title_pddhz"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_con_ckh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_tv_ckh"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:drawableEnd="@drawable/select_white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/pd_sum_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_splite1" />

    <TextView
        android:id="@+id/tv_splite1"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:text=""
        android:background="#8bcafb"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_con_ckh"
        app:layout_constraintLeft_toRightOf="@+id/tv_con_ckh"
        app:layout_constraintRight_toLeftOf="@+id/tv_title_djh"/>

    <TextView
        android:id="@+id/tv_title_djh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_title_dj"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:drawableEnd="@drawable/select_white"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_con_ckh"
        app:layout_constraintLeft_toRightOf="@+id/tv_splite1"
        app:layout_constraintRight_toLeftOf="@+id/tv_splite2"/>

    <TextView
        android:id="@+id/tv_splite2"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:text=""
        android:background="#8bcafb"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_con_ckh"
        app:layout_constraintLeft_toRightOf="@+id/tv_title_djh"
        app:layout_constraintRight_toLeftOf="@+id/tv_pd_date"/>

    <TextView
        android:id="@+id/tv_pd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_title_date"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableEnd="@drawable/select_white"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_con_ckh"
        app:layout_constraintLeft_toRightOf="@+id/tv_splite2"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>