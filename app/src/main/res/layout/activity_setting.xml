<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout1"></include>
    <EditText
        android:id="@+id/et_address"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="50"
        android:inputType="textPersonName"
        android:hint="@string/setting_et_address_hint"
        android:textSize="16sp"
        android:textColor="#282e39"
        android:layout_marginTop="60dp"
        android:drawableStart="@mipmap/ip_address"
        android:drawablePadding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_port"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="@string/setting_et_port_hint"
        android:textSize="14sp"
        android:textColor="#282e39"
        android:layout_marginTop="19dp"
        android:drawableStart="@mipmap/port"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt_setting"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/setting_bt_confirm"
        android:background="@drawable/shape_corner_login_bt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>