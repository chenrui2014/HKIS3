<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/con_con"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#a8d3ef">
        <TextView
            android:id="@+id/tv_lb_wlh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="@string/change_detail_tv_wlh"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_wlh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_lb_wlh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline
        android:id="@+id/gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="80dp"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/tv_wlm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:textColor="#282e39"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/con_con"/>
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_detail_tv_unit"
        android:textSize="14sp"
        android:textColor="#a2b0c6"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_wlm"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_lb_kc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_detail_tv_kc"
        android:textSize="16sp"
        android:textColor="#616976"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/change_kc"
        android:drawablePadding="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/gl"
        app:layout_constraintTop_toBottomOf="@+id/tv_wlm"/>
    <TextView
        android:id="@+id/tv_kc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#f2a929"
        android:layout_marginLeft="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lb_kc"
        app:layout_constraintLeft_toRightOf="@+id/tv_lb_kc"/>
    <TextView
        android:id="@+id/tv_lb_changeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_detail_tv_changeNum"
        android:textSize="16sp"
        android:textColor="#616976"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/change_num"
        android:drawablePadding="2dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lb_kc"
        app:layout_constraintLeft_toRightOf="@+id/tv_kc"/>
    <EditText
        android:id="@+id/tv_changeNum"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text=""
        android:background="@drawable/shape_corner_press4"
        android:textSize="16sp"
        android:textColor="#4cb6f8"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lb_changeNum"
        app:layout_constraintLeft_toRightOf="@+id/tv_lb_changeNum"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/card_select"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>